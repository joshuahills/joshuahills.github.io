---
const skillCategories = [
  {
    category: "Languages",
    skills: ["C#", "TypeScript", "C++", "Go"]
  },
  {
    category: "Frameworks",
    skills: [".NET", "Angular", "Node.js"]
  },
  {
    category: "Databases",
    skills: ["SQL Server", "Cassandra"]
  },
  {
    category: "DevOps, Cloud & Tooling",
    skills: ["Azure", "Docker", "Git", "Aspire"]
  },
  {
    category: "Other",
    skills: ["FFmpeg", "ActiveMQ Artemis"]
  }
];
---

<section id="skills" class="mb-32 relative">
  <h2 class="font-sans font-black uppercase tracking-tighter text-[clamp(2.5rem,6vw,4rem)] text-transparent bg-clip-text bg-gradient-to-r from-white to-custom-muted mb-16 relative inline-block">
    Skills
    <span class="absolute -bottom-2 left-0 w-1/3 h-1 bg-custom-primary"></span>
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {skillCategories.map((category) => (
      <div class="glass-panel p-8 rounded-2xl hover:border-custom-primary/30 transition-all duration-300 group">
        <h3 class="text-xs font-mono font-bold uppercase tracking-widest text-custom-muted mb-6 flex items-center gap-3">
          <span class="w-1.5 h-1.5 rounded-full bg-custom-primary group-hover:shadow-[0_0_10px_#a960ff] transition-shadow"></span>
          {category.category}
        </h3>
        <div class="flex flex-wrap gap-3">
          {category.skills.map((skill) => (
            <div class="px-4 py-2 rounded-lg bg-white/5 border border-white/5 text-sm font-medium text-custom-text hover:bg-custom-primary/20 hover:border-custom-primary/50 hover:shadow-[0_0_15px_rgba(169,96,255,0.3)] transition-all duration-300 cursor-default">
              {skill}
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
